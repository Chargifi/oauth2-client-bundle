<?xml version="1.0"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="oauth2.client.security.authentication.provider.class">OAuth2\ClientBundle\Security\Authentication\Provider\OAuth2Provider</parameter>
        <parameter key="oauth2.client.security.authentication.listener.class">OAuth2\ClientBundle\Security\Firewall\OAuth2Listener</parameter>
        <parameter key="oauth2.client.user_provider.class">OAuth2\ClientBundle\Security\User\OAuth2UserProvider</parameter>
        <parameter key="oauth2.client.server.verify_endpoint">https://www.example.com/verify</parameter>
    </parameters>
    <services>
        <service id="oauth2.client.user_provider" class="%oauth2.client.user_provider.class%">
            <argument>%oauth2.client.server.verify_endpoint%</argument>
        </service>

        <service id="oauth2.client.security.authentication.provider" class="%oauth2.client.security.authentication.provider.class%" public="false">
            <argument />
        </service>

        <service id="oauth2.client.security.authentication.listener" class="%oauth2.client.security.authentication.listener.class%" public="false">
            <argument type="service" id="security.context"/>
            <argument type="service" id="security.authentication.manager" />
        </service>
    </services>
</container>
